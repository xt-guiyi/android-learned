<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context=".ui.center.activitys.AsynchronousPracticeActivity">
    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/materialToolbar14"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorPrimary"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme"
        app:title="自定义view"
        app:titleCentered="true" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="1.自定义viewGroup，组合多个控件"
            android:textSize="28sp"
            android:fontFamily="@font/a_li_mama_dao_li_ti"
            android:textAlignment="center"
            android:layout_marginTop="10dp"
            />
        <com.example.androidlearned.customView.MyCustomViewGroup
            android:layout_width="match_parent"
            app:des="描述"
            app:title="标题"
            android:background="@color/red_2"
            android:layout_height="100dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="2.自定义view，继承某个特定view，增加额外功能"
            android:textSize="28sp"
            android:fontFamily="@font/a_li_mama_dao_li_ti"
            android:textAlignment="center"
            android:layout_marginTop="10dp"
            />
        <com.example.androidlearned.customView.MyCustomView
            android:layout_width="match_parent"
            app:maxLength="10"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="3.自定义view，继承 View,完全重写"
            android:textSize="28sp"
            android:fontFamily="@font/a_li_mama_dao_li_ti"
            android:textAlignment="center"
            android:layout_marginTop="10dp"
            />
        <com.example.androidlearned.customView.DrawView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            app:circleColor="@color/red"
            android:background="@color/red_2"/>
    </LinearLayout>
</androidx.appcompat.widget.LinearLayoutCompat>