<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.home.fragments.TextviewWidgetFragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingBottom="24dp"
        >

        <com.google.android.material.appbar.MaterialToolbar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/primary_color"
            app:title="TextView控件"
            app:titleCentered="true"
            android:fitsSystemWindows="true"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:layout_gravity="center"
            android:text="这是一段很正常的普通文本"
            android:textColor="@color/blue"
            android:textSize="16sp"/>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:layout_gravity="center"
            android:text="这是一段使用阿里巴巴字体的文本"
            android:textColor="@color/blue"
            android:textSize="16sp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:layout_gravity="center"
            android:text="英文单词全部大写: android"
            android:textAllCaps="true"
            android:textSize="16sp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:layout_gravity="center"
            android:text="字体是斜体"
            android:textStyle="italic"
            android:textSize="16sp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginTop="24dp"
            android:text="字体是粗体"
            android:textStyle="bold"
            android:textSize="16sp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginTop="24dp"
            android:text="字体缩放"
            android:textScaleX="3"
            android:textSize="16sp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="24dp"
            android:text="可点击跳转邮件\n:SCC5201314@qq.com\n可点击跳转电话(安卓8需要插入sim卡才能识别出来):\n0215201314"
            android:autoLink="email|phone"
            android:textAlignment="center"
            android:textColorLink="@color/blue"
            android:textColorHighlight="@color/primary_color"
            android:textSize="16sp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="24dp"
            android:text="多行文本居中显示:textAlignment=center\n哈哈哈哈哈\n哈哈哈哈哈n哈哈哈哈哈\nn哈哈哈"
            android:textAlignment="center"
            android:textColorLink="@color/blue"
            android:textColorHighlight="@color/primary_color"
            android:textSize="16sp"/>


        <TextView
            android:id="@+id/tv_marquee"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="24dp"
            android:text="跑马灯：这是一段很长的文字，需要跑马灯进行显示，会在文字内容超出textview长度时自动滚动播放"
            android:singleLine="true"
            android:ellipsize="marquee"
            android:marqueeRepeatLimit="marquee_forever"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:scrollHorizontally="true"
            android:background="@color/blue"
            android:textSize="16sp"/>


        <TextView
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="24dp"
            android:text="单行文本溢出省略单行文本溢出省略"
            android:maxLines="1"
            android:ellipsize="end"
            android:background="@color/blue"
            android:textSize="16sp"/>


        <TextView
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="24dp"
            android:text="多行文本溢出省略多行文本溢出省略多行文本溢出省略多行文本溢出省略"
            android:maxLines="3"
            android:ellipsize="end"
            android:background="@color/blue"
            android:textSize="16sp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="24dp"
            android:text="有背景颜色的一段文本"
            android:background="@color/blue"
            android:textSize="16sp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="24dp"
            android:text="有背景图片的一段文本"
            android:gravity="center_vertical"
            android:textColor="@color/blue"
            android:background="@drawable/button_background"
            android:textSize="16sp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="24dp"
            android:text="有阴影的一段文本"
            android:shadowColor="@color/blue"
            android:shadowDy="4"
            android:shadowDx="4"
            android:shadowRadius="2"
            android:textSize="16sp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="24dp"
            android:text="有icon的一段文本"
            android:drawableStart="@drawable/baseline_add_24"
            android:drawableTint="@color/blue"
            android:drawablePadding="8dp"
            android:textSize="16sp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="24dp"
            android:text="指定了控件高度，避免icon太大"
            android:height="20dp"
            android:drawableStart="@drawable/ic_launcher_foreground"
            android:drawableTint="@color/blue"
            android:textSize="16sp"/>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="24dp"
            android:text="改变文本y轴方向"
            android:rotationY="66"
            android:textSize="16sp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="24dp"
            android:text="改变文本x轴方向"
            android:rotationX="66"
            android:textSize="16sp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:layout_marginTop="42dp"
            android:text="改变文本水平方向"
            android:rotation="-33"
            android:transformPivotX="60dp"
            android:textSize="16sp"/>


    </LinearLayout>
</ScrollView>