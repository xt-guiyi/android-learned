<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.home.fragments.DialogWidgetFragment">

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/materialToolbar6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/primary_color"
            app:title="BadgeDrawable控件"
            app:titleCentered="true" />


        <Button
            android:id="@+id/bottom_material_dialog"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="material自带的Diaolog"
           />

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="onCreateDialogs使用方式，适合对话框，提示框等ui简单，交互简单的情况下"
            android:textSize="18sp"
           />

        <Button
            android:id="@+id/bottom_origin_dialog_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="AlertDiaolog(默认使用方式)"
             />

        <Button
            android:id="@+id/bottom_origin_dialog_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="AlertDiaolog提醒框"
             />

        <Button
            android:id="@+id/bottom_origin_dialog_3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="AlertDiaolog各种尝试(自定义布局，背景不透明度，圆角，出现位置)"
          />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="28dp"
            android:text="onCreateView使用方式，适合各种情况下的使用，推荐使用这种方式"
            android:textSize="18sp"
             />

        <Button
            android:id="@+id/bottom_custom_view_dialog_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="自定义方式创(默认使用)"
             />

        <Button
            android:id="@+id/bottom_custom_view_dialog_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="自定义方式创建底部弹窗"
           />

        <Button
            android:id="@+id/bottom_custom_view_dialog_3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="自定义通知Diaolog(成功)"
           />
        <Button
            android:id="@+id/bottom_custom_view_dialog_4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="自定义通知Diaolog(失败)"
            />
        <Button
            android:id="@+id/bottom_custom_view_dialog_5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="自定义通知Diaolog(警告)"
            />

        <Button
            android:id="@+id/bottom_custom_view_dialog_6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="自定义反馈Diaolog(中间)"
          />

        <Button
            android:id="@+id/bottom_custom_view_dialog_7"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="自定义反馈Diaolog(底部)"
            />

        <Button
            android:id="@+id/bottom_custom_view_dialog_8"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="自定义加载Diaolog"
            />
    </androidx.appcompat.widget.LinearLayoutCompat>


</ScrollView>