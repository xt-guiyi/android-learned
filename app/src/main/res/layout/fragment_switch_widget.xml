<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.home.fragments.SwitchWidgetFragment">


    <com.google.android.material.appbar.MaterialToolbar
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="?attr/colorPrimary"
        android:minHeight="?attr/actionBarSize"
        app:title="切换按钮控件"
        app:titleCentered="true" />
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="50dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <com.google.android.material.materialswitch.MaterialSwitch
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="切换按钮1"
                android:background="@null"
                android:checked="true"
                />
            <com.google.android.material.materialswitch.MaterialSwitch
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@null"
                android:text="切换按钮2(ps:去除波纹效果)"/>

            <com.google.android.material.materialswitch.MaterialSwitch
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:enabled="false"
                android:text="切换按钮3"/>
            <com.google.android.material.materialswitch.MaterialSwitch
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="切换按钮5"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:fontFamily="@font/a_li_mama_dao_li_ti"
                android:text="自定义样式"
                android:textSize="22sp"
                android:textStyle="bold"
                android:gravity="center_vertical"/>
            <com.google.android.material.materialswitch.MaterialSwitch
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="修改thumb, thumbTint属性"
                android:thumb="@drawable/baseline_arrow_forward_ios_24"
                app:thumbTint="@color/red"
                />
            <com.google.android.material.materialswitch.MaterialSwitch
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="修改thumbIcon,thumbIconTint,thumbIconSize属性"
                app:thumbIcon="@drawable/radio_status_2"
                app:thumbIconTint="@color/primary_color"
                app:thumbIconSize="16dp"
                />
            <com.google.android.material.materialswitch.MaterialSwitch
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="修改trackTint属性"
                app:trackTint="@color/red"
                />

            <com.google.android.material.materialswitch.MaterialSwitch
                style="@style/Widget.App.Switch"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="仿ios样式，使用自定义样式。"
                />
        </LinearLayout>
    </ScrollView>
</FrameLayout>