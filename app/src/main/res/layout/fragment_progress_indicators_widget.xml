<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context=".ui.home.fragments.ProgressIndicatorsWidgetFragment">

    <com.google.android.material.appbar.MaterialToolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorPrimary"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme"
        app:title="进度条控件"
        app:titleCentered="true"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="material3组件"
        android:textSize="22sp"
        android:fontFamily="@font/a_li_mama_dao_li_ti"
        />


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="确定状态:"
        android:textSize="18sp"
        android:textColor="@color/primary_color"
        android:fontFamily="@font/a_li_mama_dao_li_ti"
        />
    <!-- Linear progress indicator -->
    <com.google.android.material.progressindicator.LinearProgressIndicator
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:max="100"
        android:progress="50"
        app:indicatorColor="@color/bilibili_pink"
        app:trackColor="@color/silver_2"
        app:trackCornerRadius="10dp"
        app:trackThickness="10dp"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="12dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        />
    <!-- Circular progress indicator -->
    <com.google.android.material.progressindicator.CircularProgressIndicator
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:max="100"
        android:progress="65"
        app:indicatorColor="@color/bilibili_pink"
        app:trackThickness="4dp"
        app:trackColor="@color/silver_2"
        app:trackCornerRadius="10dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="不确定状态:"
        android:textSize="18sp"
        android:textColor="@color/primary_color"
        android:fontFamily="@font/a_li_mama_dao_li_ti"
        />

    <!-- Linear progress indicator -->
    <com.google.android.material.progressindicator.LinearProgressIndicator
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:indeterminate="true"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="12dp"/>
    <!-- Circular progress indicator -->
    <com.google.android.material.progressindicator.CircularProgressIndicator
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:indeterminate="true" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="原生控件"
        android:textSize="22sp"
        android:fontFamily="@font/a_li_mama_dao_li_ti"
        />
    <ProgressBar
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:max="100"
        android:progress="30"
        android:progressBackgroundTint="@color/blue"
        android:progressTint="@color/bilibili_pink"
        android:secondaryProgress="80"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="12dp"/>


    <ProgressBar
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:indeterminate="true"
        android:indeterminateTint="@color/bilibili_pink"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="12dp"/>

    <ProgressBar
        style="?android:attr/progressBarStyle"
        android:max="100"
        android:progress="30"
        android:indeterminate="false"
        android:indeterminateTint="@color/bilibili_pink"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />


</LinearLayout>