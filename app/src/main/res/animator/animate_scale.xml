<?xml version="1.0" encoding="utf-8"?>
<!--状态列表->属性动画-->
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <set>
            <objectAnimator android:duration="20" android:propertyName="scaleX"  android:valueFrom="1" android:valueTo="1.2" />
            <objectAnimator android:duration="20" android:propertyName="scaleY"  android:valueFrom="1" android:valueTo="1.2" />
        </set>
    </item>
    <item android:state_pressed="false">
        <set>
            <objectAnimator android:duration="20" android:propertyName="scaleX"  android:valueFrom="1.2" android:valueTo="1" />
            <objectAnimator android:duration="20" android:propertyName="scaleY"  android:valueFrom="1.2" android:valueTo="1" />
        </set>
    </item>
</selector>