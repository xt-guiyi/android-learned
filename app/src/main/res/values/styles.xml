<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- toolbar标题样式-->
    <style name="ToolbarTitleStyle" parent="Widget.Material3.Toolbar">
        <item name="android:textSize">18sp</item>
        <item name="fontFamily">@font/a_li_mama_dao_li_ti</item>
    </style>

    <!-- 底部导航栏主题样式, 使用Material2的样式    -->
    <style name="BottomNavigationStyle"  parent="Theme.MaterialComponents.DayNight" >
        <item name="colorPrimary">@color/primary_color</item>
    </style>

     <!--  按钮样式  -->
    <!--只有icon的toggleButtonGroups样式-->
    <style name="Widget.App.Button.OutLineButton.IconOnly" parent="Widget.Material3.Button.OutlinedButton">
        <item name="iconPadding">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:paddingLeft">12dp</item>
        <item name="android:paddingRight">12dp</item>
        <item name="android:minWidth">48dp</item>
        <item name="android:minHeight">48dp</item>
    </style>

    <!-- 配置基本按钮的形状   -->
    <style name="Widget.App.Button" parent="Widget.Material3.Button" >
<!--        <item name="enforceTextAppearance">false</item>-->
<!--        <item name="android:maxWidth">@dimen/m3_btn_max_width</item>-->
<!--        <item name="android:paddingLeft">@dimen/m3_btn_padding_left</item>-->
<!--        <item name="android:paddingRight">@dimen/m3_btn_padding_right</item>-->
<!--        <item name="android:paddingTop">@dimen/m3_btn_padding_top</item>-->
<!--        <item name="android:paddingBottom">@dimen/m3_btn_padding_bottom</item>-->
<!--        <item name="android:insetTop">@dimen/m3_btn_inset</item>-->
<!--        <item name="android:insetBottom">@dimen/m3_btn_inset</item>-->
<!--        <item name="android:textAppearance">@macro/m3_comp_filled_button_label_text_type</item>-->
        <item name="shapeAppearance">@style/ShapeAppearance.M3.Sys.Shape.Corner.Medium</item>
<!--        <item name="materialThemeOverlay">@style/ThemeOverlay.Material3.Button</item>-->
<!--        <item name="android:stateListAnimator" ns1:ignore="NewApi">@animator/m3_btn_state_list_anim</item>-->
        <item name="elevation">20dp</item>
<!--        <item name="android:textColor">@color/m3_button_foreground_color_selector</item>-->
<!--        <item name="iconTint">@color/m3_button_foreground_color_selector</item>-->
<!--        <item name="iconSize">@dimen/m3_comp_filled_button_with_icon_icon_size</item>-->
        <item name="backgroundTint">@color/blue</item>
        <item name="rippleColor">@color/blue</item>
    </style>

    <!-- 配置outline按钮的形状   -->
    <style name="Widget.App.OutlinedButton" parent="Widget.Material3.Button.OutlinedButton" >
        <item name="android:paddingLeft">@dimen/m3_btn_padding_left</item>
        <item name="android:paddingRight">@dimen/m3_btn_padding_right</item>
        <item name="strokeColor">@color/blue</item>
        <item name="strokeWidth">2dp</item>
        <item name="android:textColor">@color/primary_color</item>
        <item name="android:textAppearance">@style/ButtonTextAppearance</item>
    </style>


    <!-- 按钮形状样式 -->
    <style name="ShapeAppearance.APP.SmallComponent" parent="ShapeAppearance.Material3.SmallComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">2dp</item>
    </style>

    <!-- 按钮字体大小 -->
    <style name="ButtonTextAppearance" >
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">22sp</item>
    </style>

    <!-- 图片圆角设置   -->
    <style name="RoundCornerStyle" >
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">10dp</item>
    </style>

    <style name="RoundCornerStyle2" >
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="RoundCornerStyle3" >
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeBottomRight">50%</item>
        <item name="cornerSizeTopLeft">50%</item>
    </style>

    <style name="RoundCornerStyle4" >
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopRight">50%</item>
        <item name="cornerSizeTopLeft">50%</item>
    </style>
    <!-- 图片切角设置   -->
    <style name="CutCornerStyle" >
        <item name="cornerFamily">cut</item>
        <item name="cornerSize">10dp</item>
    </style>

    <style name="CutCornerStyle1" >
        <item name="cornerFamily">cut</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="CutCornerStyle2" >
        <item name="cornerFamily">cut</item>
        <item name="cornerSizeTopRight">50%</item>
        <item name="cornerSizeTopLeft">50%</item>
        <item name="cornerSizeBottomRight">50%</item>
        <item name="cornerSizeBottomLeft">50%</item>
    </style>


   <!-- 配置单选按钮样式-->
    <style name="Widget.App.RadioButton" parent="Widget.Material3.CompoundButton.RadioButton">
        <item name="buttonTint">@color/button_tint</item>
        <!--   去除波浪效果     -->
        <item name="android:background">@color/transparent</item>
    </style>



    <!-- 配置多选按钮样式-->
    <style name="Widget.App.CheckBox" parent="Widget.Material3.CompoundButton.CheckBox">
        <item name="buttonTint">@color/button_tint</item>
        <item name="buttonIconTint">@color/white</item>
        <!--   去除波浪效果     -->
        <item name="android:background">@color/transparent</item>
    </style>



    <!-- 配置switch按钮样式-->
    <style name="Widget.App.Switch" parent="Widget.Material3.CompoundButton.MaterialSwitch">
        <!--   自定义thumb图片，取消掉默认动画,需要32dp大小图片     -->
        <item name="android:thumb">@drawable/circle</item>
        <item name="thumbTint">@color/white</item>
        <item name="trackTint">@color/switch_track_tint</item>
        <item name="trackDecorationTint">@color/white</item>
        <!--   去除波浪效果     -->
        <item name="android:background">@color/transparent</item>
    </style>


    <style name="Widget.App.BottomAppBar" parent="Widget.Material3.BottomAppBar">
        <item name="materialThemeOverlay">@style/ThemeOverlay.App.BottomAppBar</item>
    </style>

    <style name="Widget.App.FloatingActionButton" parent="Widget.Material3.FloatingActionButton.Primary">
        <item name="materialThemeOverlay">@style/ThemeOverlay.App.FloatingActionButton</item>
    </style>

    <style name="ThemeOverlay.App.BottomAppBar" parent="">
        <item name="colorPrimary">@color/bilibili_pink</item>
        <item name="colorOnPrimary">@color/silver_2</item>
        <item name="textAppearanceTitleMedium">@style/TextAppearance.AppCompat.Medium</item>
    </style>

    <style name="ThemeOverlay.App.FloatingActionButton" parent="">
        <item name="colorSecondary">@color/red_2</item>
        <item name="colorOnSecondary">@color/red</item>
        <item name="shapeAppearanceSmallComponent">@style/TextAppearance.AppCompat.Medium</item>
    </style>

    <!--  将对话框的padding去掉  -->
    <style name="DialogFragmentNoPaddingStyle" parent="Theme.AppCompat.Dialog">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:paddingLeft">0dp</item>
        <item name="android:paddingRight">0dp</item>
        <item name="android:paddingTop">0dp</item>
        <item name="android:paddingBottom">0dp</item>
    </style>

    <!--  将对话框的宽和高铺满屏幕  -->
    <style name="dialogFullScreenAll" parent="Theme.AppCompat.Dialog">
        <item name="colorPrimary">@color/primary_color</item>
        <item name="colorPrimaryDark">@color/primary_color</item>
        <item name="colorAccent">@color/primary_color</item>
        <item name="android:padding">0dp</item>
        <item name="android:windowBackground">@android:color/white</item>
        <item name="android:textColor">@android:color/black</item>
    </style>


    <style name="ModalBottomSheetDialog" parent="Widget.Material3.BottomSheet.Modal">
        <item name="backgroundTint">@color/primary_color</item>
        <item name="shapeAppearance">@style/ShapeAppearance.App.LargeComponent</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="ShapeAppearance.App.LargeComponent" parent="ShapeAppearance.Material3.LargeComponent">
        <item name="cornerFamily">cut</item>
        <item name="cornerSize">24dp</item>
    </style>
</resources>
